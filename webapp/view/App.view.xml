<mvc:View controllerName="be.hogent.aalst.helloworld.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Shell id="shell">
        <App id='app'>
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Input
                            value="{/user}"
                            placeholder="Enter your name"
                        />
                        <Button
                            text="Press for greetings"
                            press="onPress"
                        />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
